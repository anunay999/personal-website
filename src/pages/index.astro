---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const last_posts = posts.slice(0, 3);
---

<BaseLayout>

    <div class="pb-12 mt-5">
      <div class="text-xl py-1">Hey there ðŸ‘‹</div>
      <div class="text-5xl font-bold">I'm Anunay Aatipamula</div>
      <div class="text-3xl py-3 font-bold">Software Engineer & Entrepreneur</div>
      <div class="py-2">
      </div>
      <div class="mt-8">
        <a class="btn btn-primary text-white transition ease-in-out hover:scale-[103%] hover:bg-accent hover:text-white" href="https://www.linkedin.com/in/anunay9/" target="_blank"> Let's connect!</a>
      </div>
    </div>

    <div>
      <div class="text-3xl w-full font-bold mb-2">My last projects {"</>"}</div>
    </div>
    <HorizontalCard
      title="read smart"
      img="/projects/readsmart.png"
      badge="NEW"
      desc="Chrome extension that personalizes articles by skipping known concepts, highlighting new content, and providing context from your reading history for faster, more focused learning."
      url="https://github.com/anunay999/read-smart"
      
    />

    <div class="divider my-0"></div>

    <HorizontalCard
      title="NeuroTrail"
      img="/projects/neurotrail.png"
      badge="NEW"
      desc="AI-powered learning system that enhances personalized learning through memory-augmented AI. Users can upload knowledge sources, generate quizzes, and track progress."
      url="https://github.com/anunay999/neuro-trail"
      
    />

    <div class="divider my-0"></div>
      <HorizontalCard
        title="Git Clone"
        img="/projects/git.jpeg"
        desc="A Python implementation of Git clone functionality that replicates core Git operations including repository cloning, commit history tracking, and basic version control features."
        url="https://github.com/anunay999/git-python-clone"
    />
    <div class="divider my-0"></div>

    <HorizontalCard
            title="Meal Planner"
            img="/projects/meal-planner.jpeg"
            desc="Generates a 7-day meal plan based on your age, gender, weight, goals , dietary restrictions, and food preferences using LLM."
            url="https://huggingface.co/spaces/Anunay9/mealplanner"
            
    />
    <div class="divider my-0"></div>
  
    <HorizontalCard
    title="Neural Image Caption Generator"
    img="/projects/lstm.jpg"
    desc="A neural image caption generator is an AI model that generates descriptive captions for images using deep learning techniques."
    url="https://github.com/anunay999/Neural-Caption-Generator"
  />


    <div>
      <div class="text-3xl w-full font-bold mb-5 mt-10">Latest from blog</div>
    </div>

    {
      last_posts.map((post) => (
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + post.slug}
          target="_self"
        />
        <div class="divider my-0"></div>
      ))
    }

</BaseLayout>
